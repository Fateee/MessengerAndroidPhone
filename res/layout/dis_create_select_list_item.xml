<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_contact_main_org"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_dis_create_item_tag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7"
        android:clickable="true"
        android:paddingBottom="1.5dp"
        android:paddingLeft="10dp"
        android:paddingTop="1.5dp"
        android:text="部门"
        android:textColor="#6A6A6A"
        android:textSize="@dimen/common_text_size" />

    <LinearLayout
        android:id="@+id/ll_dis_create_item_org"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_dis_create_item_orgname"
            style="@style/contactItem"
            android:text="组织机构" />

        <TextView
            android:id="@+id/tv_dis_create_item_personcount"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.5"
            android:background="@drawable/contact_listitem_bg_selector"
            android:drawableRight="@drawable/contact_right_arrow"
            android:gravity="center"
            android:paddingRight="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dis_create_item_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

<!--         <CheckBox
            android:id="@+id/cb_dis_create_item_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" /> -->
        
		<ImageView
            android:id="@+id/cb_dis_create_item_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:padding="8dp"
            android:scaleType="center"
            android:src="@drawable/report_option_not_selelcted" />

        <ImageView
            android:id="@+id/iv_dis_create_item_personicon"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/contact_listitem_bg_selector"
            android:padding="5dp"
            android:scaleType="center"
            android:src="@drawable/main_contact_unselect" />

        <TextView
            android:id="@+id/tv_dis_create_item_personname"
            style="@style/contactItem"
            android:drawableLeft="@null"
            android:text="依能" />
    </LinearLayout>

</LinearLayout>