<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_contact_main_org"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_contact_org_personlist_item_tag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7"
        android:clickable="true"
        android:paddingBottom="1.5dp"
        android:paddingLeft="10dp"
        android:paddingTop="1.5dp"
        android:text="成员"
        android:textColor="#6A6A6A"
        android:textSize="@dimen/common_text_size"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/iv_contact_org_personlist_item_icon"
            android:background="@drawable/contact_listitem_bg_selector"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/main_contact_unselect" />

        <TextView
            android:id="@+id/contact_org_personlist_item_name"
            style="@style/contactItem"
            android:drawableLeft="@null"
            android:text="依能" />

<!--         <TextView
            android:id="@+id/contact_org_personlist_item_role"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.5"
            android:background="@drawable/contact_listitem_bg_selector"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="职务" /> -->
    </LinearLayout>

</LinearLayout>